<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.elong.nb.dao.IncrInventoryDao">
	<!-- 获取大于指定lastTime的最早发生变化的库存增量 -->
	<select id="getOneIncrInventory" resultType="incrInventory">
		select * from IncrInventory
		<where>
			<if test="lastTime != null and !lastTime.equals('')">
				<![CDATA[ and ChangeTime <= #{lastTime}  ]]>
			</if>
		</where>
		order by ChangeTime desc limit 0,1
	</select>

	<!-- 获取最大IncrID的库存增量 -->
	<select id="getLastIncrInventory" resultType="incrInventory">
		select * from IncrInventory order by IncrID desc limit 0,1
	</select>

	<!-- 获取大于指定lastId的maxRecordCount条库存增量 -->
	<select id="getIncrInventories" resultType="incrInventory">
		select * from IncrInventory
		<where>
			<if test="lastId != null and !lastId.equals('')">and IncrID > #{lastId} </if>
		</where>
		order by IncrID limit 0,#{maxRecordCount}
	</select>
</mapper>